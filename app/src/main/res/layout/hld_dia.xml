<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="725dp"
        android:layout_height="485dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="红绿灯设置"
            android:background="@drawable/lin_huise_hei1"
            android:textSize="30dp"
            android:padding="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/lin_baise_hei1"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="红灯周期:"
                    android:textSize="25dp"
                    android:layout_gravity="center"
                    />

                <EditText
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:id="@+id/ed_hong"
                    android:inputType="number"
                    android:background="@drawable/lin_baise_hei1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="秒"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄灯周期:"
                    android:textSize="25dp"
                    android:layout_gravity="center"
                    />

                <EditText
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:inputType="number"
                    android:id="@+id/ed_huang"
                    android:background="@drawable/lin_baise_hei1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="秒"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="绿灯周期:"
                    android:textSize="25dp"
                    android:layout_gravity="center"
                    />

                <EditText
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:inputType="number"
                    android:id="@+id/ed_lv"
                    android:background="@drawable/lin_baise_hei1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="秒"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="确定"
                    android:textSize="25dp"
                    android:padding="15dp"
                    android:id="@+id/btn_queding"
                    />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    android:textSize="25dp"
                    android:padding="15dp"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/btn_quxiao"
                    />


            </LinearLayout>

        </LinearLayout>


        </LinearLayout>





</LinearLayout>